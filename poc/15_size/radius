#!/bin/sh
me="$0"
${AWK=awk} -v me="$me" '
BEGIN {
    FS = " *, *"
    if (ARGC < 2)
        err("not enough arguments")

    for (i = 1; i in ARGV; i++) {
        f = ARGV[i]
        one(f)
        msg("%s", f)
    }
}

function one(f,   rc, r, i, cl)
{
    rc = getline < f
    if (rc != 1)
        err("fail to read \"%s\"", f)
    for (i = 1; i <= NF; i++)
        Key[$i] = i
    while (getline < f == 1) {
        cl = get("cl")
        r = get("r")
        if (cl != 0 && r < 0.1)
            print r
    }
    close(f)
}

function msg(fmt, a, b, c, d, e)
{
    printf "%s: " fmt "\n", me, a, b, c, d, e | "cat >&2"
}

function err(fmt, a, b, c, d, e)
{
    msg(fmt, a, b, c, d, e)
    exit(2)
}

function get(key,   i)
{
    i = Key[key]
    return $i
}

function vol2rad(V,   pi, k)
{
    k = 4/3*3.141592653589793
    V /= k
    return V^(1/3)
}
' "$@"

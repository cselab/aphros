#!/bin/bash -l

# Run with arguments from arg on number of tasks from np

set -eu

# run command with time and append to out
rt () {
  set -o pipefail 
  echo "$@"
  time eval "$@" 2>&1 | tee -a out
}

js="job.status"

echo running > $js

[[ -f pre ]] && rt ./pre

rt "$(cat arg)"

[[ -f post ]] && rt ./post

mv -vf job.id{,.last}

echo "done" > $js

cat $js


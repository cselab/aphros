: ${LD_LIBRARY_PATH=}
: ${PYTHONPATH=}
: ${CMAKE_PREFIX_PATH=}

export CHPREFIX="$P"
export PATH=$P/bin:$PATH
export LD_LIBRARY_PATH=$P/lib:${LD_LIBRARY_PATH}
export PYTHONPATH=$P/bin:$PYTHONPATH
export EIGEN3_INCLUDE_DIR=$P/include
export CMAKE_PREFIX_PATH=$P/cmake:${CMAKE_PREFIX_PATH}
export MANPATH=$(MANPATH= manpath -g):$P/man

export OMP_NUM_THREADS=1


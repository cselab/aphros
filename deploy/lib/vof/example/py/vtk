#!/usr/bin/python

from vof import cylinder

x0 = y0 = z0 = 0
r = 10
u, v, w = 1, 1, 1
nx = ny = nz = 20

lx = -int(nx/2); hx = lx + nx
ly = -int(ny/2); hy = ly + ny
lz = -int(nz/2); hz = lz + nz

print("# vtk DataFile Version 2.0")
print("generated by cylinder.py")
print("ASCII")
print("DATASET STRUCTURED_POINTS")
print("DIMENSIONS %d %d %d" % (nx + 1, ny + 1, nz + 1))
print("ORIGIN %.16g %.16g %.16g" % (lx - 0.5, ly - 0.5, lz - 0.5))
print("SPACING 1 1 1")
print("CELL_DATA %d" % (nx*ny*nz))
print("SCALARS u double 1")
print("LOOKUP_TABLE default")

for k in range(lz, hz):
    for j in range(ly, hy):
        for i in range(lx, hx):
            x = x0 - i
            y = y0 - j
            z = z0 - k
            f = cylinder(x, y, z, r, u, v, w)
            print("%.16g" % f)

'''
warning: Did not get f1*f2<0, k,kmax: 100 100
x0 = y0 = z0 = 0
r = 10
u, v, w = 1, 1, 1
'''

.POSIX:
.SUFFIXES:
.SUFFIXES: .o .c
CFLAGS = -g -O2
PREFIX = $(APHROS_PREFIX)
O = bbox.o  err.o  main.o  memory.o  off.o  ply.o  predicate.o  stl.o predicate/main.o
L = libinside_static.a
H = inside.h
$L: $O; ar rv $@ $O && ranlib $@
.c.o:; $(CC) $< -c $(CFLAGS) -o $@
install: $L $H
	mkdir -p -- "$(PREFIX)/lib" "$(PREFIX)/include/"
	cp -- $L "$(PREFIX)/lib/"
	cp -- $H "$(PREFIX)/include/"
clean:; rm -f -- $O $L
bbox.o: bbox.h
bbox.o: err.h
bbox.o: memory.h
err.o: err.h
main.o: bbox.h
main.o: err.h
main.o: memory.h
memory.o: memory.h
off.o: err.h
plo.o: memory.h
plo.o: ply.h
predicate/main.o: predicate/main.inc
predicate.o: err.h
predicate.o: predicate.h
predicate.o: predicate/main.inc
stl.o: err.h
stl.o: memory.h

.POSIX:
.SUFFIXES:
.SUFFIXES: .o .c
CFLAGS = -g -O2
PREFIX = $(APHROS_PREFIX)
O = main.o
L = libmarch_static.a
H = march.h
$L: $O; ar rv $@ $O && ranlib $@
.c.o:; $(CC) $< -c $(CFLAGS) -o $@
install: $L $H
	mkdir -p -- "$(PREFIX)/lib" "$(PREFIX)/include"
	cp -- $L "$(PREFIX)/lib/"
	cp -- $H "$(PREFIX)/include/"
clean:; rm -f -- $O $L
main.o: march.h
main.o: table.h

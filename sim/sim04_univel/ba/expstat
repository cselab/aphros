#!/usr/bin/env python

import numpy as np

pi = "o/sc"
po = "traj.dat"

vv = ['t', 'm2', 'c2x', 'c2y', 'c2z', 'v2x', 'v2y', 'v2z', 
        'vlmx', 'vlmy', 'vlmz', 'vl2x', 'vl2y', 'vl2z', 'pd']

d = np.genfromtxt(pi, names=True)

fo = open(po, 'w')

def W(s):
    fo.write(s + '\n')

W(' '.join(vv))

for a in d:
    W(' '.join(map(str, a)))

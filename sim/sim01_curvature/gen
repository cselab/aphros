#!/usr/bin/env python

import aphros

a = aphros.GetStdPar('nx', 'dim', 'cpr', 'bcoh', 'bryk')
a['nx'] = [0, 'mesh size, 0: auto based on cpr']
a['bcoh'][0] = [0.2, 0.4, 0.6]

c = vars(aphros.GetArgs(a))

c['np'] = 1

dom = 1.
nx = c['nx']

dim = c['dim']

cpr = c['cpr']

if nx == 0: # auto nx
    nxm = aphros.GetBs(dim)
    nx = max(nxm, aphros.Upper2(2 * cpr + 1 + max(c['bcoh'])))
    c['nx'] = nx

hx = dom / nx

bc = [o * hx + 0.5 for o in c['bcoh']]

if dim == 2:
    bc[2] = hx * 0.5

br = cpr / nx
br = [br, br * c['bryk'], br]

aphros.par.WriteBub([bc], [br])

aphros.par.WriteDim(dim)

aphros.WritePar(c)

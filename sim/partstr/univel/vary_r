#!/bin/bash

set -ue

# output folder
o=o
rm -vf $o/*.pdf
mkdir -p $o

# bubble
: ${bc="0.3 0.3 0.3 "}

# log
l="out"
echo > $l

for br in 0.037 0.045 0.0625 0.125 0.25 ; do
#for br in 0.0625 ; do
  echo "br=$br"
  echo "$bc $br $br" > b.dat
  p="r${br}_"

  # run ch
  d="ch"
  echo $d
  (cd $d ; ./run) &>> $l

  # run ge
  d="ge"
  echo $d
  (cd $d ; ./run) &>> $l

  # plot cmp
  ./plot.py &>> $l

  d="ch"
  mv -f $d/vf_0.pdf $o/${p}vf_$d.pdf
  d="ge"
  mv -f $d/vf_0000.pdf $o/${p}vf_$d.pdf
  for f in ttl traj trajp trajx trajy ; do
    mv -v $f.pdf $o/${p}${f}.pdf
  done
done

# tile all pdf
(cd $o ; ../tile)

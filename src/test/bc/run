#!/bin/bash

set -eu

# test name
t=$1
# config file
c=_${t}.conf
# reference
r=ref${t}
# extra
extra=${2:-}

cp "$c" add.conf

if [ "$extra" != "" ] ; then
  echo "include _${extra}.conf" >> add.conf
  r=${r}_${extra}
fi

# run 
make -f sim.makefile cleanrun

a=0
for f in $r/* ; do
  echo $f
  eps=2e-12
  if [ "${f##*.}" = "vts" ] ; then eps=2e-5; fi
  if ! ap.diffnum "${f#$r/}" "$f" $eps; then a=1; fi
done

exit $a

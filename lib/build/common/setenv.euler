P0=prefix
: ${P=$P0}
: ${LD_LIBRARY_PATH=}
: ${PKG_CONFIG_PATH=}

P=$(P=$P cd ../ ; readlink -f $P)

PATH=$P/bin:$PATH
LD_LIBRARY_PATH=$P/lib:$LD_LIBRARY_PATH
PKG_CONFIG_PATH=$P/lib/pkgconfig:$PKG_CONFIG_PATH

export P PATH LD_LIBRARY_PATH PKG_CONFIG_PATH

module load new
module load gcc/6.3.0
module load open_mpi/2.1.1
